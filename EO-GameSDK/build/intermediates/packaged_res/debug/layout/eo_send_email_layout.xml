<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/eo_send_email_root"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/eo_corners_bg"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">
            <!--返回按钮-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="77" />

            <ImageView
                android:id="@+id/eo_send_email_back_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="109"
                android:clickable="true"
                android:background="@drawable/eo_back_btn_selected" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="77" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="225"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="28" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />

                <ImageView
                    android:id="@+id/eo_find_pwd_logo"
                    android:layout_width="0dp"
                    android:layout_weight="199"
                    android:layout_height="match_parent"
                    android:src="@drawable/eo_find_pwd_logo"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="23" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="38" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/eo_edit_text_bg"
                android:layout_weight="31">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:src="@drawable/eo_email" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

                <EditText
                    android:id="@+id/eo_send_email_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="190"
                    android:background="@color/eo_transparent"
                    android:hint="@string/eo_email_hint"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/eo_black"
                    android:textColorHint="@color/eo_hight_gray_color"
                    android:imeOptions="actionDone"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25" />

            <Button
                android:id="@+id/eo_send_email_bt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="32"
                android:background="@drawable/eo_login_btn_bg"
                android:text="@string/eo_send_email"
                android:textSize="15sp"
                android:textColor="@color/eo_white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="34"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="36" />
    </LinearLayout>
    
</LinearLayout>
