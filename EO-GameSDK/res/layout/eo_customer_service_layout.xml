<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/eo_cs_layout_root"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/eo_corners_bg"
        >
        <!--内容区域-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />
        <!--Logo区域-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70" />
            <ImageView
                android:id="@+id/eo_logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="125"
                android:src="@drawable/eo_logo"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="43" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5" />
                <ImageView
                    android:id="@+id/eo_cs_close_btn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:src="@drawable/eo_close"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="11" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="110"
                android:text="@string/eo_customer_service_text"
                android:textSize="9sp"
                android:gravity="center"
                android:textColor="@color/eo_black"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/eo_cs_email_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            >
            <!--客服邮箱-->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:src="@drawable/eo_email"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20" />

            <TextView
                android:id="@+id/eo_cs_email_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="170"
                android:gravity="center_vertical"
                android:text="sgservice88@gmail.com"
                android:maxLines="1"
                android:textColor="@color/eo_name_gray_color"
                android:textSize="13sp"
                />
            <View 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:id="@+id/eo_cs_fb_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            ><!--客服邮箱-->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:src="@drawable/eo_facebook_icon"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20" />

            <TextView
                android:id="@+id/eo_cs_fb_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="170"
                android:gravity="center_vertical"
                android:text="sgservice88@gmail.com"
                android:textColor="@color/eo_name_gray_color"
                android:maxLines="1"
                android:textSize="13sp"
                />
            <View 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="44"
            android:background="@drawable/eo_cs_bottom"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="36"
                android:text="@string/eo_cs_tip_text"
                android:textColor="@color/eo_white"
                android:gravity="center"
                android:textSize="11sp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
