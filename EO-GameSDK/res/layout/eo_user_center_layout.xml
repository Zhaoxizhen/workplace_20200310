<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/eo_user_center_root"
        android:layout_width="272dp"
        android:layout_height="213dp"
        android:orientation="vertical"
        android:background="@drawable/eo_corners_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="41"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="235"
                    android:orientation="vertical"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="21"
                        android:orientation="horizontal"
                        >
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="21"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="156"
                            android:src="@drawable/eo_user_center_logo"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="61"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="37"
                    android:orientation="vertical"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7.5"/>
                    <ImageView
                        android:id="@+id/eo_user_close_btn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="25"
                        android:src="@drawable/eo_close"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7.5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:src="@drawable/eo_man"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                />

            <TextView
                android:id="@+id/eo_user_center_user_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="165"
                android:gravity="center_vertical"
                android:text="FBpy234234232"
                android:textColor="@color/eo_hight_gray_color"
                android:textSize="11sp"
                />

            <ImageView
                android:id="@+id/eo_user_center_logout_iv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@drawable/eo_logout"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="175"
            android:orientation="vertical"
            android:background="@drawable/eo_user_center_bottom"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="17" />

            <LinearLayout
                android:id="@+id/eo_uc_name_layout_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20" />
                <ImageView
                    android:id="@+id/eo_email_icon"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="20dp"
                    android:src="@drawable/eo_email"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <TextView
                    android:id="@+id/eo_uc_email_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="166"
                    android:text="SG1009837623647238"
                    android:gravity="center_vertical"
                    android:textColor="@color/eo_hight_gray_color"
                    android:textSize="11sp"
                    android:visibility="visible"
                    />

                <ImageView
                    android:id="@+id/eo_uc_email_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="166"
                    android:visibility="gone"
                    android:src="@drawable/eo_user_info_line"
                    />

                <ImageView
                    android:id="@+id/eo_uc_email_bind"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:src="@drawable/eo_bindings"
                    android:visibility="invisible"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10" />

            <LinearLayout
                android:id="@+id/eo_uc_fb_layout_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20" />
                <ImageView
                    android:id="@+id/eo_fb_icon"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="20dp"
                    android:src="@drawable/eo_facebook_icon"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <TextView
                    android:id="@+id/eo_uc_fb_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="166"
                    android:textColor="@color/eo_hight_gray_color"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/eo_uc_fb_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="166"
                    android:visibility="visible"
                    android:src="@drawable/eo_user_info_line"
                    />

                <ImageView
                    android:id="@+id/eo_uc_fb_bind"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:src="@drawable/eo_bindings"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="27"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60" />

                <Button
                    android:id="@+id/eo_uc_cs_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="141"
                    android:background="@drawable/eo_login_btn_bg"
                    android:text="@string/eo_customer_service"
                    android:textColor="@color/eo_white"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>