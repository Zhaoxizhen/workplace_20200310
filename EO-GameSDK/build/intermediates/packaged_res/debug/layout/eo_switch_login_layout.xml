<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/eo_switch_login_root"
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:background="@drawable/eo_corners_bg"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="24">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="68" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="109"
                    android:src="@drawable/eo_logo" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="68" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="26" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="31">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" />

                <LinearLayout
                    android:id="@+id/eo_switch_login_record_list_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="225"
                    android:background="@drawable/eo_edit_text_bg"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:src="@drawable/eo_email" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                    <TextView
                        android:id="@+id/eo_swith_login_username_et"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="210"
                        android:textColor="@color/eo_name_gray_color"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                    <com.eogame.widgets.EOLinearLayout
                        android:id="@+id/eo_login_record_list_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20">

                        <ImageView
                            android:id="@+id/eo_switch_login_record_list_bt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/eo_login_list_down" />
                    </com.eogame.widgets.EOLinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="31">
                <!--登录按钮-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" />

                <Button
                    android:id="@+id/eo_swith_login_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="225"
                    android:background="@drawable/eo_login_btn_bg"
                    android:text="@string/eo_login"
                    android:textColor="@color/eo_white"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20" />

            <LinearLayout
                android:id="@+id/eo_switch_other_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--其它登录方式-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>
                <ImageView
                    android:id="@+id/eo_switch_right_angle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:clickable="false"
                    android:src="@drawable/eo_right_angle" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="180"
                    android:text="@string/eo_othre_login"
                    android:textColor="@color/eo_switch_text_color"
                    android:gravity="center_vertical"
                    android:clickable="false"
                    android:textSize="13sp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10" />
        </LinearLayout>

        

</LinearLayout>


